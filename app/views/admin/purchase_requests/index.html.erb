<div>
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">
        <% if @business %>
          <%= @business.name %> 구매 요청
        <% elsif @product %>
          <%= @product.name %> 구매 요청
        <% else %>
          전체 구매 요청 관리
        <% end %>
      </h1>
      <% if @business %>
        <p class="text-zinc-500 mt-1">
          <%= link_to "← 업체 목록으로", admin_businesses_path, class: "text-blue-500 hover:text-blue-400" %>
        </p>
      <% elsif @product %>
        <p class="text-zinc-500 mt-1">
          <%= link_to "← 상품 목록으로", admin_business_products_path(@product.business), class: "text-blue-500 hover:text-blue-400" %>
        </p>
      <% end %>
    </div>
    
    <% unless @business || @product %>
      <div class="flex gap-2">
        <%= link_to "리스트 보기", admin_purchase_requests_path, 
            class: "px-4 py-2 rounded text-sm #{params[:view] != 'grouped' ? 'btn-primary' : 'btn-secondary'}" %>
        <%= link_to "업체별 보기", admin_purchase_requests_path(view: 'grouped'), 
            class: "px-4 py-2 rounded text-sm #{params[:view] == 'grouped' ? 'btn-primary' : 'btn-secondary'}" %>
      </div>
    <% end %>
  </div>

  <% if params[:view] == 'grouped' && !@business && !@product %>
    <!-- 업체별 그룹 뷰 -->
    <div class="grid grid-cols-1 gap-4">
      <% @businesses_with_requests.each do |business| %>
        <div class="card">
          <div class="p-4 border-b border-zinc-800 cursor-pointer hover:bg-zinc-900"
               data-controller="business-toggle"
               data-action="click->business-toggle#toggle"
               data-business-toggle-business-id-value="<%= business.id %>"
               data-business-toggle-url-value="<%= admin_purchase_requests_path(view: 'grouped', selected_business_id: business.id) %>">
            <div class="flex justify-between items-center">
              <div>
                <h3 class="font-semibold text-lg"><%= business.name %></h3>
                <p class="text-sm text-zinc-500">
                  총 <%= business.products.joins(:purchase_requests).count %> 건의 구매요청
                </p>
              </div>
              <div class="flex items-center gap-4">
                <% status_counts = business.products.joins(:purchase_requests).group('purchase_requests.status').count %>
                <div class="flex gap-2 text-sm">
                  <% status_counts.each do |status, count| %>
                    <span class="px-2 py-1 rounded <%= case status
                      when 'pending' then 'bg-yellow-900 text-yellow-300'
                      when 'contacted' then 'bg-blue-900 text-blue-300'
                      when 'negotiating' then 'bg-purple-900 text-purple-300'
                      when 'completed' then 'bg-green-900 text-green-300'
                      when 'cancelled' then 'bg-red-900 text-red-300'
                      end %>">
                      <%= I18n.t("enums.purchase_request.status.#{status}") %> <%= count %>
                    </span>
                  <% end %>
                </div>
                <svg class="w-5 h-5 text-zinc-400 transition-transform duration-200"
                     data-business-toggle-target="icon"
                     fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
            </div>
          </div>
          
          <div class="hidden" 
               data-business-toggle-target="content"
               id="business-<%= business.id %>-requests">
            <div class="p-8 text-center text-zinc-500">
              <div class="animate-pulse">
                <div class="h-4 bg-zinc-800 rounded w-1/4 mx-auto"></div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 flex justify-center">
      <%= paginate @businesses_with_requests %>
    </div>
    
  <% else %>
    <!-- 기존 리스트 뷰 -->
    <div class="flex gap-2 mb-4 flex-wrap items-center justify-between">
      <% base_path = if @business
                        admin_business_purchase_requests_path(@business)
                      elsif @product
                        admin_purchase_requests_path(product_id: @product.id)
                      else
                        admin_purchase_requests_path
                      end %>
      
      <div class="flex gap-2 flex-wrap items-center">
        <% unless @business || @product %>
          <div class="relative">
            <select onchange="window.location.href = this.value" 
                    class="appearance-none bg-zinc-800 text-white px-4 py-2 pr-8 rounded text-sm border border-zinc-700 hover:border-zinc-600 focus:outline-none focus:border-blue-500">
              <option value="<%= admin_purchase_requests_path(status: params[:status]) %>" <%= 'selected' if params[:business_id].blank? %>>
                모든 업체
              </option>
              <% Business.joins(products: :purchase_requests).distinct.order(:name).each do |business| %>
                <option value="<%= admin_purchase_requests_path(business_id: business.id, status: params[:status]) %>" 
                        <%= 'selected' if params[:business_id] == business.id.to_s %>>
                  <%= business.name %>
                </option>
              <% end %>
            </select>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-zinc-400">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
              </svg>
            </div>
          </div>
        <% end %>
      
        <div class="flex gap-2">
          <%= link_to "전체", base_path + (params[:business_id].present? ? "?business_id=#{params[:business_id]}" : ""), 
              class: "px-4 py-2 rounded text-sm #{params[:status].blank? ? 'btn-primary' : 'btn-secondary'}" %>
          <% PurchaseRequest.status_options.each do |text, status| %>
            <% url_params = { status: status } %>
            <% url_params[:business_id] = params[:business_id] if params[:business_id].present? %>
            <%= link_to text, base_path + "?" + url_params.to_query, 
                class: "px-4 py-2 rounded text-sm #{params[:status] == status ? 'btn-primary' : 'btn-secondary'}" %>
          <% end %>
        </div>
      </div>
      
      <% if params[:business_id].present? || params[:status].present? %>
        <%= link_to admin_purchase_requests_path, 
            class: "px-4 py-2 rounded text-sm bg-zinc-800 text-zinc-300 hover:bg-zinc-700 border border-zinc-700" do %>
          <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
          </svg>
          필터 초기화
        <% end %>
      <% end %>
    </div>

    <div class="card overflow-hidden">
      <table class="w-full">
        <thead class="border-b border-zinc-800">
          <tr>
            <th class="text-left p-4">요청일시</th>
            <th class="text-left p-4" colspan="2">상품</th>
            <th class="text-left p-4">구매자</th>
            <th class="text-left p-4">희망가격</th>
            <th class="text-left p-4">상태</th>
            <th class="text-left p-4">작업</th>
          </tr>
        </thead>
        <tbody>
          <% @purchase_requests.each do |request| %>
            <tr class="border-b border-zinc-800 hover:bg-zinc-900">
              <td class="p-4">
                <p class="text-sm"><%= request.created_at.strftime("%Y-%m-%d") %></p>
                <p class="text-xs text-zinc-500"><%= request.created_at.strftime("%H:%M") %></p>
              </td>
              <td class="p-2">
                <% if request.product.images.attached? %>
                  <%= image_tag request.product.images.first, 
                      class: "w-12 h-12 object-cover rounded" %>
                <% else %>
                  <div class="w-12 h-12 bg-zinc-800 rounded flex items-center justify-center">
                    <svg class="w-6 h-6 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                            d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
              </td>
              <td class="p-4">
                <p class="font-semibold"><%= request.product.name %></p>
                <p class="text-sm text-zinc-500"><%= request.product.business.name %></p>
              </td>
              <td class="p-4">
                <p><%= request.buyer_name %></p>
                <p class="text-sm text-zinc-500"><%= request.buyer_phone %></p>
                <% if request.buyer_email.present? %>
                  <p class="text-sm text-zinc-500"><%= request.buyer_email %></p>
                <% end %>
              </td>
              <td class="p-4">
                <% if request.offered_price.present? %>
                  <%= format_currency(request.offered_price) %>
                  <% if request.is_price_offer? %>
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-orange-900 text-orange-300">
                      가격제안
                    </span>
                  <% end %>
                  <p class="text-xs text-zinc-500">
                    (정가: <%= format_currency(request.product.sale_price) %>)
                  </p>
                <% else %>
                  <span class="text-zinc-500">정가 구매</span>
                <% end %>
              </td>
              <td class="p-4">
                <span class="text-sm <%= case request.status
                  when 'pending' then 'text-yellow-500'
                  when 'contacted' then 'text-blue-500'
                  when 'negotiating' then 'text-purple-500'
                  when 'completed' then 'text-green-500'
                  when 'cancelled' then 'text-red-500'
                  end %>">
                  <%= request.status_text %>
                </span>
              </td>
              <td class="p-4">
                <%= link_to "상세보기", admin_purchase_request_path(request), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <% if @purchase_requests.empty? %>
        <div class="text-center py-8">
          <p class="text-zinc-500">구매 요청이 없습니다.</p>
        </div>
      <% end %>
    </div>
    
    <div class="mt-6 flex justify-center">
      <%= paginate @purchase_requests %>
    </div>
  <% end %>
</div>

