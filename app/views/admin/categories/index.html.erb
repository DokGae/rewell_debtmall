<div>
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">카테고리 관리</h1>
      <p class="text-zinc-500 mt-1">총 <%= @categories.count %>개 카테고리</p>
    </div>
    <%= link_to "새 카테고리 추가", new_admin_category_path, class: "btn-primary" %>
  </div>

  <div class="card">
    <% if @root_categories.any? %>
      <div class="divide-y divide-zinc-800">
        <% @root_categories.each do |category| %>
          <%= render 'category_row', category: category, level: 0 %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-zinc-500">등록된 카테고리가 없습니다.</p>
      </div>
    <% end %>
  </div>
</div>