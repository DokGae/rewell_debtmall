<div>
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">업체 관리</h1>
      <p class="text-zinc-500 mt-1">전체 <%= @businesses.total_count %>개 업체</p>
    </div>
    <%= link_to "새 업체 등록", new_admin_business_path, class: "btn-primary" %>
  </div>

  <!-- 검색 및 필터 -->
  <div class="card p-4 mb-6">
    <%= form_with url: admin_businesses_path, method: :get, local: true do |f| %>
      <div class="flex gap-4 items-center">
        <div class="flex-1">
          <%= f.text_field :search, value: params[:search], 
              placeholder: "업체명 또는 이메일로 검색...", 
              class: "!w-full !px-4 !py-2 !bg-zinc-800 !border !border-zinc-700 !rounded-md !text-white !placeholder-zinc-500 focus:!outline-none focus:!ring-2 focus:!ring-blue-500 focus:!border-transparent",
              style: "width: 100%;" %>
        </div>
        <div class="w-auto">
          <%= f.select :status, 
              options_for_select([["모든 상태", ""]] + Business.status_options, params[:status]),
              {}, 
              class: "!px-4 !py-2 !bg-zinc-800 !border !border-zinc-700 !rounded-md !text-white focus:!outline-none focus:!ring-2 focus:!ring-blue-500 focus:!border-transparent !w-auto",
              style: "width: auto; min-width: 150px;" %>
        </div>
        <%= f.submit "검색", class: "!px-6 !py-2 !bg-blue-600 !text-white !font-medium !rounded-md hover:!bg-blue-700 focus:!outline-none focus:!ring-2 focus:!ring-offset-2 focus:!ring-blue-500 focus:!ring-offset-zinc-900 !transition-colors !cursor-pointer !w-auto",
            style: "width: auto;" %>
      </div>
    <% end %>
  </div>

  <div class="card overflow-hidden">
    <table class="w-full">
      <thead class="border-b border-zinc-800">
        <tr>
          <th class="text-left p-4">업체명</th>
          <th class="text-left p-4">연락처</th>
          <th class="text-left p-4">총 채무액</th>
          <th class="text-left p-4">상태</th>
          <th class="text-left p-4">상품 수</th>
          <th class="text-left p-4">작업</th>
        </tr>
      </thead>
      <tbody>
        <% @businesses.each do |business| %>
          <tr class="border-b border-zinc-800 hover:bg-zinc-900">
            <td class="p-4">
              <div class="flex items-center gap-3">
                <% if business.logo.attached? %>
                  <%= image_tag business.logo, class: "w-10 h-10 rounded object-cover" %>
                <% end %>
                <div>
                  <p class="font-semibold"><%= business.name %></p>
                  <p class="text-sm text-zinc-500"><%= business.slug %></p>
                </div>
              </div>
            </td>
            <td class="p-4">
              <p class="text-sm"><%= business.email %></p>
              <p class="text-sm text-zinc-500"><%= business.phone %></p>
            </td>
            <td class="p-4">
              <%= format_currency(business.total_debt || 0) %>
            </td>
            <td class="p-4">
              <span class="<%= business.active? ? 'text-green-500' : 'text-red-500' %>">
                <%= business.status_text %>
              </span>
            </td>
            <td class="p-4">
              <%= business.products.count %>
            </td>
            <td class="p-4">
              <div class="flex gap-2 flex-wrap">
                <%= link_to "보기", admin_business_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "수정", edit_admin_business_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "상품", admin_business_products_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "제안", admin_business_purchase_requests_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "삭제", admin_business_path(business), 
                    method: :delete,
                    data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" },
                    class: "text-sm text-red-500 hover:text-red-400" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @businesses.empty? %>
      <div class="text-center py-8">
        <p class="text-zinc-500">등록된 업체가 없습니다.</p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6 flex justify-center">
    <%= paginate @businesses %>
  </div>
</div>