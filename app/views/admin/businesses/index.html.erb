<div>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">관리자 대시보드</h1>
    <%= link_to "새 업체 등록", new_admin_business_path, class: "btn-primary" %>
  </div>

  <!-- 통계 카드 -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-6 gap-4 mb-8">
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">전체 업체</h3>
      <p class="text-2xl font-bold"><%= @total_businesses %></p>
    </div>
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">활성 업체</h3>
      <p class="text-2xl font-bold text-green-500"><%= @active_businesses %></p>
    </div>
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">전체 상품</h3>
      <p class="text-2xl font-bold"><%= @total_products %></p>
    </div>
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">판매 가능 상품</h3>
      <p class="text-2xl font-bold text-blue-500"><%= @available_products %></p>
    </div>
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">전체 문의</h3>
      <p class="text-2xl font-bold"><%= @total_requests %></p>
    </div>
    <div class="card p-4">
      <h3 class="text-sm text-zinc-400 mb-1">대기 중 문의</h3>
      <p class="text-2xl font-bold text-yellow-500"><%= @pending_requests %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- 최근 구매 문의 -->
    <div class="card p-6">
      <h2 class="text-lg font-semibold mb-4">최근 구매 문의</h2>
      <div class="space-y-3">
        <% @recent_requests.each do |request| %>
          <div class="flex justify-between items-center p-3 bg-zinc-900 rounded">
            <div>
              <p class="font-medium"><%= request.buyer_name %></p>
              <p class="text-sm text-zinc-400">
                <%= request.product.name %> - <%= request.product.business.name %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-sm">
                <span class="<%= request.pending? ? 'text-yellow-500' : 'text-zinc-400' %>">
                  <%= request.status.humanize %>
                </span>
              </p>
              <p class="text-xs text-zinc-500">
                <%= request.created_at.strftime("%Y-%m-%d %H:%M") %>
              </p>
            </div>
          </div>
        <% end %>
        <% if @recent_requests.empty? %>
          <p class="text-zinc-500 text-center py-4">아직 구매 문의가 없습니다.</p>
        <% end %>
      </div>
      <%= link_to "전체 문의 보기 →", admin_purchase_requests_path, 
          class: "block mt-4 text-sm text-blue-500 hover:text-blue-400" %>
    </div>

    <!-- 업체별 상품 통계 -->
    <div class="card p-6">
      <h2 class="text-lg font-semibold mb-4">상품 많은 업체 TOP 5</h2>
      <div class="space-y-3">
        <% @business_stats.each_with_index do |business, index| %>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-3">
              <span class="text-2xl font-bold text-zinc-600"><%= index + 1 %></span>
              <div>
                <p class="font-medium"><%= business.name %></p>
                <p class="text-sm text-zinc-400">
                  <%= business.status.humanize %>
                </p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-xl font-bold"><%= business.products_count %></p>
              <p class="text-xs text-zinc-500">개 상품</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <h2 class="text-xl font-semibold mb-4">업체 목록</h2>

  <div class="card overflow-hidden">
    <table class="w-full">
      <thead class="border-b border-zinc-800">
        <tr>
          <th class="text-left p-4">업체명</th>
          <th class="text-left p-4">연락처</th>
          <th class="text-left p-4">총 채무액</th>
          <th class="text-left p-4">상태</th>
          <th class="text-left p-4">상품 수</th>
          <th class="text-left p-4">작업</th>
        </tr>
      </thead>
      <tbody>
        <% @businesses.each do |business| %>
          <tr class="border-b border-zinc-800 hover:bg-zinc-900">
            <td class="p-4">
              <div class="flex items-center gap-3">
                <% if business.logo.attached? %>
                  <%= image_tag business.logo, class: "w-10 h-10 rounded object-cover" %>
                <% end %>
                <div>
                  <p class="font-semibold"><%= business.name %></p>
                  <p class="text-sm text-zinc-500"><%= business.slug %></p>
                </div>
              </div>
            </td>
            <td class="p-4">
              <p class="text-sm"><%= business.email %></p>
              <p class="text-sm text-zinc-500"><%= business.phone %></p>
            </td>
            <td class="p-4">
              <%= number_to_currency(business.total_debt || 0, unit: "₩", precision: 0) %>
            </td>
            <td class="p-4">
              <span class="<%= business.active? ? 'text-green-500' : 'text-red-500' %>">
                <%= business.status.humanize %>
              </span>
            </td>
            <td class="p-4">
              <%= business.products.count %>
            </td>
            <td class="p-4">
              <div class="flex gap-2">
                <%= link_to "보기", admin_business_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "수정", edit_admin_business_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "상품", admin_business_products_path(business), 
                    class: "text-sm text-zinc-400 hover:text-white" %>
                <%= link_to "삭제", admin_business_path(business), 
                    method: :delete,
                    data: { turbo_method: :delete, turbo_confirm: "정말 삭제하시겠습니까?" },
                    class: "text-sm text-red-500 hover:text-red-400" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @businesses.empty? %>
      <div class="text-center py-8">
        <p class="text-zinc-500">등록된 업체가 없습니다.</p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-6 flex justify-center">
    <%= paginate @businesses %>
  </div>
</div>