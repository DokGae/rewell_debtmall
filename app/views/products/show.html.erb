<div class="min-h-screen bg-zinc-950">
  <header class="sticky top-0 z-10 bg-zinc-900 border-b border-zinc-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="flex items-center justify-between h-16" aria-label="브레드크럼">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <%= link_to "홈", root_path, class: "text-zinc-400 hover:text-zinc-200" %>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 text-zinc-600 mx-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <%= link_to @business.name, business_path(@business), class: "text-zinc-400 hover:text-zinc-200" %>
          </li>
          <li class="flex items-center">
            <svg class="w-4 h-4 text-zinc-600 mx-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-zinc-100 font-medium"><%= @product.name %></span>
          </li>
        </ol>
      </nav>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <% if @business.deadline.present? && @business.deadline_active? %>
      <div class="mb-8 flex justify-center">
        <div class="inline-flex items-center gap-4 px-6 py-3 rounded-lg bg-zinc-900 border border-zinc-800" 
             data-controller="countdown"
             data-countdown-deadline-value="<%= @business.deadline.iso8601 %>">
          <span class="text-sm text-zinc-400">구매 마감까지</span>
          <div class="flex items-center gap-3" data-countdown-target="container">
            <div class="text-center">
              <div class="text-2xl font-bold text-white" data-countdown-target="days">00</div>
              <div class="text-xs text-zinc-500">일</div>
            </div>
            <span class="text-zinc-600 text-xl">:</span>
            <div class="text-center">
              <div class="text-2xl font-bold text-white" data-countdown-target="hours">00</div>
              <div class="text-xs text-zinc-500">시간</div>
            </div>
            <span class="text-zinc-600 text-xl">:</span>
            <div class="text-center">
              <div class="text-2xl font-bold text-white" data-countdown-target="minutes">00</div>
              <div class="text-xs text-zinc-500">분</div>
            </div>
            <span class="text-zinc-600 text-xl">:</span>
            <div class="text-center">
              <div class="text-2xl font-bold text-red-500" data-countdown-target="seconds">00</div>
              <div class="text-xs text-zinc-500">초</div>
            </div>
          </div>
        </div>
      </div>
    <% elsif @business.deadline_expired? %>
      <div class="mb-8 flex justify-center">
        <div class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-red-900/20 border border-red-800">
          <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
          <span class="text-red-400 font-medium">구매 기간이 종료되었습니다</span>
        </div>
      </div>
    <% end %>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="space-y-4" data-controller="gallery">
        <% if @product.images.attached? %>
          <div class="relative overflow-hidden rounded-lg bg-zinc-900 border border-zinc-800">
            <div class="aspect-square">
              <%= image_tag @product.images.first.variant(:large), 
                  data: { 
                    gallery_target: "mainImage",
                    action: "touchstart->gallery#handleTouchStart touchend->gallery#handleTouchEnd"
                  },
                  class: "w-full h-full object-contain",
                  loading: "eager" %>
            </div>
          </div>
          
          <% if @product.images.count > 1 %>
            <div class="grid grid-cols-4 gap-3">
              <% @product.images.each_with_index do |image, index| %>
                <button data-action="click->gallery#changeImage"
                        data-index="<%= index %>"
                        data-large-url="<%= url_for(image.variant(:large)) %>"
                        data-gallery-target="thumbnail"
                        class="relative aspect-square rounded-md overflow-hidden border-2 border-transparent hover:border-zinc-400 focus:border-zinc-400 focus:outline-none transition-colors">
                  <%= image_tag image.variant(:thumb), 
                      class: "w-full h-full object-cover",
                      loading: "lazy" %>
                </button>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="aspect-square rounded-lg bg-zinc-900 border border-zinc-800 flex items-center justify-center">
            <div class="text-center">
              <svg class="mx-auto h-12 w-12 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <p class="mt-2 text-sm text-zinc-500">이미지 없음</p>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="space-y-6">
        <div>
          <h1 class="text-2xl sm:text-3xl font-bold text-white"><%= @product.name %></h1>
          <div class="mt-2 flex items-center gap-4">
            <% if @product.category.present? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-zinc-900 text-zinc-400 border border-zinc-800">
                <%= @product.category %>
              </span>
            <% end %>
            <% if @product.in_stock? %>
              <span class="inline-flex items-center gap-1 text-sm text-green-600">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                재고 있음
                <% if @product.stock_quantity.present? %>
                  <span class="text-zinc-500">(남은 수량: <%= @product.stock_quantity %>개)</span>
                <% end %>
              </span>
            <% else %>
              <span class="inline-flex items-center gap-1 text-sm text-red-600">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                품절
              </span>
            <% end %>
          </div>
        </div>
        
        <div class="p-6 rounded-lg bg-zinc-900 border border-zinc-800">
          <% if @product.discount_percentage > 0 %>
            <div class="flex items-baseline gap-2 mb-1">
              <span class="text-3xl font-bold text-white">
                <%= number_to_currency(@product.sale_price, unit: "₩", precision: 0) %>
              </span>
              <span class="text-lg text-zinc-500 line-through">
                <%= number_to_currency(@product.original_price, unit: "₩", precision: 0) %>
              </span>
              <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold bg-red-100 text-red-800">
                <%= @product.discount_percentage %>% 할인
              </span>
            </div>
          <% else %>
            <div class="text-3xl font-bold text-white">
              <%= number_to_currency(@product.sale_price, unit: "₩", precision: 0) %>
            </div>
          <% end %>
        </div>
        
        <% if @product.description.present? %>
          <div class="space-y-2">
            <h2 class="text-lg font-semibold text-white">상품 설명</h2>
            <div class="text-zinc-300">
              <p class="whitespace-pre-wrap"><%= @product.description %></p>
            </div>
          </div>
        <% end %>
        
        <% if @product.specifications.present? %>
          <div class="space-y-2 pt-4 border-t border-zinc-800">
            <h2 class="text-lg font-semibold text-white">상품 사양</h2>
            <div class="text-zinc-300">
              <p class="whitespace-pre-wrap"><%= @product.specifications %></p>
            </div>
          </div>
        <% end %>
        
        <div class="mt-8 p-6 rounded-lg border border-zinc-800 bg-zinc-900">
          <h2 class="text-xl font-semibold text-white mb-4">구매 문의</h2>
          
          <%= form_with model: @purchase_request, 
              url: business_product_purchase_requests_path(@business, @product),
              local: true,
              class: "space-y-4" do |f| %>
            
            <div>
              <%= f.label :buyer_name, "이름", class: "block text-sm font-medium text-zinc-300 mb-1" %>
              <%= f.text_field :buyer_name, required: true, 
                  class: "block w-full rounded-md bg-zinc-800 border-zinc-700 px-3 py-2 text-white shadow-sm ring-1 ring-inset ring-zinc-700 placeholder:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-zinc-500", 
                  placeholder: "구매자 이름" %>
              <% if @purchase_request.errors[:buyer_name].any? %>
                <p class="text-red-600 text-sm mt-1"><%= @purchase_request.errors[:buyer_name].first %></p>
              <% end %>
            </div>
            
            <div>
              <%= f.label :buyer_phone, "연락처", class: "block text-sm font-medium text-zinc-300 mb-1" %>
              <%= f.telephone_field :buyer_phone, required: true, 
                  class: "block w-full rounded-md bg-zinc-800 border-zinc-700 px-3 py-2 text-white shadow-sm ring-1 ring-inset ring-zinc-700 placeholder:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-zinc-500", 
                  placeholder: "휴대폰 번호" %>
              <% if @purchase_request.errors[:buyer_phone].any? %>
                <p class="text-red-600 text-sm mt-1"><%= @purchase_request.errors[:buyer_phone].first %></p>
              <% end %>
            </div>
            
            <div>
              <%= f.label :offered_price, "희망 가격 (선택)", class: "block text-sm font-medium text-zinc-300 mb-1" %>
              <%= f.number_field :offered_price, 
                  class: "block w-full rounded-md bg-zinc-800 border-zinc-700 px-3 py-2 text-white shadow-sm ring-1 ring-inset ring-zinc-700 placeholder:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-zinc-500", 
                  placeholder: "희망 구매 가격",
                  min: 0 %>
              <% if @purchase_request.errors[:offered_price].any? %>
                <p class="text-red-600 text-sm mt-1"><%= @purchase_request.errors[:offered_price].first %></p>
              <% end %>
            </div>
            
            <div>
              <%= f.label :message, "문의 내용", class: "block text-sm font-medium text-zinc-300 mb-1" %>
              <%= f.text_area :message, rows: 4, 
                  class: "block w-full rounded-md bg-zinc-800 border-zinc-700 px-3 py-2 text-white shadow-sm ring-1 ring-inset ring-zinc-700 placeholder:text-zinc-500 focus:ring-2 focus:ring-inset focus:ring-zinc-500", 
                  placeholder: "구매 관련 문의사항을 입력해주세요" %>
              <% if @purchase_request.errors[:message].any? %>
                <p class="text-red-600 text-sm mt-1"><%= @purchase_request.errors[:message].first %></p>
              <% end %>
            </div>
            
            <div>
              <%= f.submit "구매 문의하기", 
                  class: "w-full rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-zinc-900 shadow-sm hover:bg-zinc-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white disabled:opacity-50 disabled:cursor-not-allowed transition-colors cursor-pointer",
                  disabled: !@product.in_stock? || @business.deadline_expired? %>
              <% if !@product.in_stock? %>
                <p class="text-red-600 text-sm mt-2 text-center">품절된 상품은 구매 문의할 수 없습니다.</p>
              <% elsif @business.deadline_expired? %>
                <p class="text-red-600 text-sm mt-2 text-center">구매 기간이 종료되어 문의할 수 없습니다.</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
